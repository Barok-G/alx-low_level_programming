#include "holberton.h"

/**
 * times_table - Prints the 9 times table, starting with 0
 */
void times_table(void)
{
	int i, j;
	int k = 0;

	for (i = 0; i < 10; i++)
	{
		for (j = 0; j < 10; j++)
		{
			if (i == 1)
			{
				_putchar(k++ + '0');
			}
			else if (j == 0)
			{
				_putchar(j + '0');
			}
			else
			{
				if (i * j > 9)
				{
					_putchar((i * j) / 10 + '0');
					_putchar((i * j) % 10 + '0');
				}	
				else
				{
					_putchar(i * j + '0');
				}
			}
			if (j != 9)
			{
				_putchar(',');
				_putchar(' ');
				_putchar(' ');
			}
		}
	_putchar('\n');
	}
}
